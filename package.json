{
  "name": "edix",
  "version": "0.2.1",
  "description": "An experimental, framework agnostic, small (4kB+) contenteditable state manager.",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "tsc": "tsc -p . --noEmit",
    "test": "vitest --run",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "e2e": "npx playwright test",
    "typedoc": "typedoc",
    "size": "size-limit",
    "prepare": "patch-package",
    "prepublishOnly": "npm run typedoc && rimraf lib && npm run build"
  },
  "devDependencies": {
    "@playwright/test": "1.52.0",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.6",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@storybook/addon-docs": "^9.0.9",
    "@storybook/react-vite": "^9.0.9",
    "@textlint/kernel": "^15.0.0",
    "@textlint/textlint-plugin-text": "^15.0.0",
    "@types/diff": "^8.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "diff": "^8.0.0",
    "esbuild": "^0.25.4",
    "kuromojin": "^3.0.1",
    "linkifyjs": "^4.3.1",
    "patch-package": "^8.0.0",
    "path-browserify": "^1.0.1",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-is": "^19.1.0",
    "rimraf": "6.0.1",
    "rollup": "^4.43.0",
    "size-limit": "^11.0.2",
    "storybook": "^9.0.9",
    "textlint-rule-preset-japanese": "^10.0.4",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inokawa/edix.git"
  },
  "keywords": [
    "contenteditable",
    "ui",
    "headless",
    "textarea",
    "input",
    "form",
    "highlight",
    "autocomplete",
    "tagging",
    "combobox",
    "richtext",
    "editor",
    "wysiwyg",
    "react",
    "vue",
    "svelte",
    "solid",
    "angular",
    "preact",
    "alpine",
    "qwik"
  ],
  "author": "inokawa <stratoooo-taster@yahoo.co.jp> (https://github.com/inokawa/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inokawa/edix/issues"
  },
  "homepage": "https://github.com/inokawa/edix#readme"
}
